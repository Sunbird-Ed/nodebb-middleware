		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Generate a random discussion topic",
					"const topics = [",
					"    \"The Future of AI in Education\",",
					"    \"Challenges in Online Learning\",",
					"    \"Importance of Project-Based Learning\",",
					"    \"Hybrid Learning Models\",",
					"    // Add more topics",
					"];",
					"",
					"// Get a random index from the topics array",
					"const randomIndex = Math.floor(Math.random() * topics.length);",
					"const randomTopic = topics[randomIndex];",
					"",
					"// Set the generated topic as an environment variable",
					"pm.environment.set(\"random_topic\", randomTopic);"
				]
			}
